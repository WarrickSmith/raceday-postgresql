# Backend API Configuration
NEXT_PUBLIC_API_URL=http://localhost:7000/api

# Client-side logging level (DEBUG, INFO, WARN, ERROR, SILENT)
# DEBUG: All logging (development)
# INFO: Info, warnings, and errors (staging)
# WARN: Warnings and errors only
# ERROR: Critical errors only (production)
# SILENT: No logging
NEXT_PUBLIC_LOG_LEVEL=ERROR

# Client polling controls
NEXT_PUBLIC_POLLING_ENABLED=true
NEXT_PUBLIC_POLLING_DEBUG_MODE=false
# Polling timeout in milliseconds (default: 5000 = 5 seconds)
# Reduced from 10s to fail faster when backend is unavailable
NEXT_PUBLIC_POLLING_TIMEOUT=5000

# Enable polling monitor UI (development feature only)
# Set to true to display polling metrics panel above Enhanced Entrants Grid
# Provides observability: request counts, error rates, latency, cadence compliance
# Default: false (hidden in production)
NEXT_PUBLIC_ENABLE_POLLING_MONITOR=false

# Health monitoring configuration
# Enable periodic health checks to validate backend connectivity
# Default: true (enabled in all environments)
NEXT_PUBLIC_ENABLE_HEALTH_MONITORING=true

# Health check interval in milliseconds (minimum 60000 = 1 minute)
# Default: 180000 (3 minutes)
# Adjust based on backend stability requirements and API rate limits
NEXT_PUBLIC_HEALTH_CHECK_INTERVAL_MS=180000
