# Environment
NODE_ENV=development

# Database Configuration (PostgreSQL 18)
# Connection parameters - DATABASE_URL is built from these values in code
# The migration script will create the 'raceday' database if it doesn't exist
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=raceday
DB_POOL_MAX=10

# NZ TAB API Configuration
# Base URL for NZ TAB racing data API (public API, no key required)
NZTAB_API_URL=https://api.tab.co.nz/affiliates/v1

# Required partner identification headers for API requests
NZTAB_FROM_EMAIL=ws@baybox.co.nz
NZTAB_PARTNER_NAME=Warrick Smith
NZTAB_PARTNER_ID=Private Developer

# Server Configuration
PORT=7000
LOG_LEVEL=info

# Performance Tuning
UV_THREADPOOL_SIZE=8
MAX_WORKER_THREADS=3

# Evening Backfill Configuration
EVENING_BACKFILL_ENABLED=false
EVENING_BACKFILL_CRON=0 21 * * *
